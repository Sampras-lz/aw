<% include partials/header %>
<div class="form container">
	<form method="POST" action="/CreateSite" >
	<div class="form-group row">
		<label class="col-sm-2 col-form-label col-form-label-lg" for="title">Name :</label>
		<div class="col-sm-10" >
			<input type="text" class="form-control form-control-lg" name="name" id="title" placeholder="What's it called">
		</div>
	</div>
	
	<div class="form-group row">
		<label class="col-sm-2 col-form-label col-form-label-sm" for="link">Image Link :</label>
		<div class="col-sm-10" >
			<input type="text" class="form-control form-control-sm" name="image" id="link" placeholder="Can i see it??">
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label col-form-label-lg" for="description">Description :</label>
		<div class="col-sm-10">
			<textarea class="form-control form-control-lg" id="description" name="Desc" rows="5">Tell me more...</textarea>
		</div>
	</div>
	<a class="btn btn-warning btn-lg" href="/" role="button"><span class="glyphicon glyphicon-chevron-left"></span>Go Back</a>
	<button style="float:right" class="btn btn-lg btn-success"><span class="glyphicon glyphicon-ok"></span>Submit</button>
</form>
</div>
<% include partials/footer %>