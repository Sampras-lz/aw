<% include partials/header %>
<div class="jumbotron container">
	<h1>YelpCamp</h1>
	<p>This are some of the selected camps</p>
	<a href="/CreateSite" class="btn btn-primary btn-large">Add new Camp</a>
</div>
<div class="container-fluid">
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% for(var i =0 ;i<campsites.length ; i++ ){%>
			<div class="col-sm-4 col-md-3">
				<div class="thumbnail">
					<img  src="<%= campsites[i].image%>">
					<div class="caption"> 
						<h4><%= campsites[i].name%></h4>
					</div>
				</div>
			</div>
		<% } %>
	</div>
</div>
<hr>
<a href="/CreateSite">Add new Camp</a>
<% include partials/footer %>